<table class='table'>
  <thead>
    <tr>
      <th></th>
      <th>コミュニティ名</th>
      <th>紹介文</th>
      <th>参加人数</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% communities.each do |community| %>
      <tr>
        <td>
          <% if community.community_image.attached? %>
            <%= image_tag community.community_image,size:"75x50" %>
          <% else %>
          <% end %>
        </td>
        <td>
          <%= community.name %>
        </td>
        <td>
          <%= community.introduction %>
        </td>
        <td>
          <%= community.community_users.count %>
        </td>
        <td>
          <%= link_to '削除', admin_community_path(community), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table> 