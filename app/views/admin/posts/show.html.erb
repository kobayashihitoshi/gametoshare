<div class="container p-3">
  <div class="row">
    <div class="col-md-5 offset-md-1">
      <h2>投稿内容</h2>

      <p><%= link_to @user.name, admin_user_path(@user), class: 'text-dark' %></p>
  
      <p><%= @post.body %></p>
  
      <% if @post.image.attached? %>
        <h4>画像</h4>
        <%= image_tag url_for(@post.image), size: "300x200" %>
      <% else %>
      <% end %>
  
      <% if @post.video.attached? %>
        <h4>動画</h4>
        <%= video_tag url_for(@post.video) %>
        <% else %>
      <% end %>

      <%= link_to "削除する", post_path(@post), method: :delete, data: { confirm: "本当に削除しますか？" }, class: 'btn btn-sm btn-danger' %>
    </div>
  </div>
</div>