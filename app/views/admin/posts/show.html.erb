<div class="container p-3">
  <div class="row">
    <div class="col-md-4 offset-md-1">
      <h2>投稿内容</h2>

      <p><%= @user.name %></p>
  
      <p><%= @post.body %></p>
  
      <% if @post.image.attached? %>
        <h4>画像</h4>
        <%= image_tag url_for(@post.image), size: "300x200" %>
      <% else %>
      <% end %>
  
      <% if @post.video.attached? %>
        <h4>動画</h4>
        <%= video_tag url_for(@post.video) %>
        <% else %>
      <% end %>

      <%= link_to "削除する", admin_post_path(@post), method: :delete, data: { confirm: "本当に削除しますか？" }, class: 'btn btn-sm btn-danger mt-3' %>
      
    </div>
  
    <div class="col-md-3">
      <p>みんなのコメント</p>
      <% @post.post_comments.each do |post_comment| %>
        <ul>
          <li>
            <%= post_comment.user.name %>：
            <%= post_comment.comment %>
            <%= link_to "削除", admin_post_post_comment_path(post_comment.post, post_comment), method: :delete, class: 'btn btn-sm btn-danger mx-2' %>
          </li>
        </ul>
      <% end %>

    </div>
  </div>
</div>