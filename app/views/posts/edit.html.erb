<div class="container p-3">
  <h1>編集画面</h1>
  <%= form_with model: @post, method: :patch do |f| %>
  
    <h4>投稿文</h4>
    <%= f.text_area :body %>
    
    <h4>画像</h4>
    <%= f.file_field :image %>
    
    <h4>動画</h4>
    <%= f.file_field :video %>
    
    <%= f.submit '保存' %>
    
  <% end %>
</div>