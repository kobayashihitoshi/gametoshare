<div class="container p-3">
  <h1>編集画面</h1>

  <% if @post.errors.any? %>
    <%= @post.errors.count %>件のエラーが発生しました。
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
      
  <%= form_with model: @post, method: :patch do |f| %>
  
    <h4>投稿文</h4>
    <%= f.text_area :body %>
    
    <h4>画像</h4>
    <%= f.file_field :image %>
    
    <h4>動画</h4>
    <%= f.file_field :video %>
    
    <%= f.submit '保存' %>
    
  <% end %>
</div>