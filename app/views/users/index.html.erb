<div class="container p-3">
  <div class="row">
    <div class="col-md-2"></div>
      <div class="col-md-6 offset-md-1">
        <h2>仲間一覧</h2>
        <table class="table">
          <thead>
            <tr>
              <th>name</th>
            </tr>
          </thead>
          <% @users.each do |user| %>
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(user) do %>
                  <%= user.name %>
                <% end %>
              </td>
            </tr>
          </tbody>
          <% end %>
      </table>
      </div>
  </div>
</div>