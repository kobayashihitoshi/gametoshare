<div class="container p-3">
  <div class="row">
    <div class="col-md-4 offset-md-1">
      <h4>編集画面</h4>
    
      <% if @post.errors.any? %>
        <%= @post.errors.count %>件のエラーが発生しました。
        <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
          
      <%= form_with model: @post, method: :patch do |f| %>
      
        <h5 class="mt-3">投稿文</h5>
        <%= f.text_area :body %>
        
        <h5 class="mt-3">画像</h5>
        <%= f.file_field :image %>
        
        <h5 class="mt-3">動画</h5>
        <%= f.file_field :video %></br>
        
        <%= l @post.created_at, format: :short%></br>
        
        <%= f.submit '保存', class: "my-3 btn btn-sm btn-outline-dark" %>
        
      <% end %>
    </div>
  </div>
</div>