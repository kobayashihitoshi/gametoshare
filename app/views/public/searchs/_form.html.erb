<% if user_signed_in? %>
  <h3 class="py-3">検索欄</h3>
  <%= form_with url: search_path, method: :get do %>
    <%= text_field_tag 'content' %>
    <%= select_tag 'model', options_for_select({ "友達検索" => "user", "投稿検索" => "post"}) %>
    <%= select_tag 'method', options_for_select({ "完全一致" => "perfect", "部分一致" => "partial" }) %>
    <%= submit_tag '検索' %>
  <% end %>
<% end %>  