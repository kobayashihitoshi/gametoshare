<div class="container">
  <h2 class="text-center"><%= @community.name %></h2>
  <h4 class="text-center">承認待ち一覧</h4>

  <div class="row mt-5">
    <div class="col-11 col-md-12 mx-auto">
    <% if @permits.present? %>
      <div class="table-responsive">
        <table class="table table-hover text-nowrap bg-light">
          <thead>
            <tr>
              <th>名前</th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @permits.each do |permit| %>
              <tr>
                <td><%= link_to permit.user.name, user_path(permit.user.id), class: "text-dark" %></td>
                <td>
                </td>
                <td></td>
                <td class="text-right">
                  <%= link_to '加入許可', community_community_users_path(@community, permit_id: permit.id), method: :post, class: "btn btn-sm btn-success" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <P class="text-center">承認待ちユーザーはいません。</P>
    <% end %>
    </div>
    <div class="mx-auto mt-5"><%= paginate @permits %></div>
  </div>

  <div class="row mt-5">
    <div class="col-md-9 mx-auto">
    <p class="text-center"><%= link_to "戻る", communities_path(@community), class: 'text-dark font-weight-bold' %></p>
    </div>
  </div>

</div>
