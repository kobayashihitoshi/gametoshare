<div class="container p-3">
  <div class="row">
    <div class="col-md-3">

    <div class="my-3">
      <h4><%= @user.name %>
        <% if user_signed_in? && @user == current_user %>
          <%= link_to edit_user_path(current_user), class: 'btn btn-sm btn-outline-dark' do %>
            <i class="fa-solid fa-gears"></i>
          <% end %>
        <% else %>
        <% end %>
      </h4>
    </div>

    <% if user_signed_in? && @user == current_user %>
      <% if @post.errors.any? %>
        <%= @post.errors.count %>件のエラーが発生しました。
        <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @post do |f| %>
        <h5>投稿</h5>
        <%= f.text_area :body %>
        <h5 class="mt-3">画像
        <%= f.file_field :image, accept: "image/*", class: "btn-sm" %></h5>
        <h5 class="mt-3">動画
        <%= f.file_field :video, accept: "video/*", class: "btn-sm" %></h5>
        
        <%= f.submit '投稿', class: 'btn btn-outline-dark my-3' %>
      <% end %>
    <% else %>
    <% end %>
    
    </div>
  
    <div class="col-md-8 offset-md-1">
      <h3>投稿一覧</h3>
      <table class="table table-hover table-user-show">
        <thead>
          <tr>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <% @posts.each do |post| %>
        <tbody>
            <td>
              <%= link_to post_path(post), class: 'text-dark' do %>
                <%= simple_format(post.body, sanitize: true) %>
              <% end %>
            </td>
            <td>
              <% if post.image.attached? %>
                <%= image_tag url_for(post.image), size: "200x100", style: "object-fit: cover;" %>
              <% else %>
                <p></p>
              <% end %>
            </td>
            <td>
              <% if post.video.attached? %>
                <%= video_tag url_for(post.video), size: "200x100", style: "object-fit: cover;" %>
              <% else %>
                <p></p>
              <% end %>
            </td>
            <td>
              <%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %>
            </td>
        </tbody>
        <% end %>
      </table>
      <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-end">
          <%= paginate @posts %>
        </ul>
      </nav>
    </div>
  </div>
</div>